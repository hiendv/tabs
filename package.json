{
  "name": "tabs-monorepo",
  "description": "Tabs Monorepo",
  "repository": "git@github.com:hiendv/tabs.git",
  "author": "Hien Dao <hien.dv.neo@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@commitlint/config-lerna-scopes": "^9.1.1",
    "@hiendv/bem-sass": "^0.1.0",
    "@vue/cli-plugin-babel": "^4.5.3",
    "@vue/cli-plugin-eslint": "^4.5.3",
    "@vue/cli-service": "^4.5.3",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^1.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.3.0",
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "eslint": "^7.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "flatted": "^3.0.4",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.0",
    "jest-serializer-vue": "^2.0.2",
    "lerna": "^3.22.1",
    "octicons-react": "^1.0.6",
    "octicons-vue": "^1.0.6",
    "prismjs": "^1.21.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-transition-group": "^4.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.1",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-vue": "^5.1.9",
    "sass-loader": "^9.0.3",
    "vue": "^2.6.11",
    "vue-jest": "^3.0.6",
    "vue-router": "^3.4.3",
    "vue-template-compiler": "^2.6.11"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "setup": "lerna clean --yes && lerna bootstrap --hoist",
    "clean": "rimraf packages/**/dist/*",
    "build": "lerna exec --parallel --ignore @hiendv/*-example -- rollup -c --environment BUILD:production",
    "watch": "lerna exec --parallel --ignore @hiendv/*-example -- rollup -c -w",
    "lint": "eslint --ext .js,.vue,.jsx packages/* --fix",
    "serve:vue": "lerna exec --scope @hiendv/vue-tabs-example -- vue-cli-service serve",
    "build:vue": "lerna exec --scope @hiendv/vue-tabs-example -- vue-cli-service build",
    "serve:react": "lerna exec --scope @hiendv/react-tabs-example -- react-scripts start",
    "build:react": "lerna exec --scope @hiendv/react-tabs-example -- react-scripts build",
    "prebuild": "$npm_execpath run clean",
    "prewatch": "$npm_execpath run clean",
    "prebuild:vue": "$npm_execpath run lint",
    "test": "jest --no-cache",
    "test-ci": "$npm_execpath run build && $npm_execpath run test -- --coverage --ci --maxWorkers=4",
    "release": "$npm_execpath run build && $npm_execpath run test && lerna publish"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/src/**/*.{js,vue,jsx}",
      "!packages/*-example/src/**/*"
    ],
    "moduleFileExtensions": [
      "js",
      "vue",
      "jsx"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "testURL": "http://localhost"
  },
  "resolutions": {
    "handlebars": "^4.3.0"
  }
}
